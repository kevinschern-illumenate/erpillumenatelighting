    {
      "parameters": {
        "jsCode": "// Transform ERPNext product to Webflow format\nconst product = $input.item.json;\n\n// Build specifications string\nlet specsHtml = '';\nif (product.specifications && product.specifications.length > 0) {\n  specsHtml = '<ul>';\n  for (const spec of product.specifications) {\n    specsHtml += `<li><strong>${spec.spec_label}:</strong> ${spec.spec_value}${spec.spec_unit ? ' ' + spec.spec_unit : ''}</li>`;\n  }\n  specsHtml += '</ul>';\n}\n\n// Build Webflow payload\nconst webflowData = {\n  isArchived: false,\n  isDraft: false,\n  fieldData: {\n    \"name\": product.product_name,\n    \"slug\": product.product_slug,\n    \"product-type\": product.product_type,\n    \"short-description\": product.short_description || '',\n    \"long-description\": product.long_description || '',\n    \"is-configurable\": product.is_configurable || false,\n    \"min-length-mm\": product.min_length_mm || 0,\n    \"max-length-mm\": product.max_length_mm || 0,\n    \"erp-sync-id\": product.product_slug,\n    \"specifications-html\": specsHtml\n  }\n};\n\n// Add featured image if available\nif (product.featured_image) {\n  // Note: Webflow requires publicly accessible URLs\n  // You may need to construct the full URL\n  webflowData.fieldData[\"featured-image\"] = product.featured_image;\n}\n\nreturn {\n  json: {\n    webflowData,\n    originalProduct: product\n  }\n};"
      },
      "id": "transform-product",
      "name": "Transform to Webflow Format",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [1150, 0]
    },
    {
      "parameters": {
        "method": "POST",
        "url": "https://api.webflow.com/v2/collections/696fc3c5c42c86528e97f413/items",
        "authentication": "genericCredentialType",
        "genericAuthType": "httpHeaderAuth",
        "sendBody": true,
        "specifyBody": "json",
        "jsonBody": "={{ JSON.stringify($json.webflowData) }}",
        "options": {}
      },
      "id": "webflow-create",
      "name": "Webflow: Create Product",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.2,
      "position": [1400, -75],
      "credentials": {
